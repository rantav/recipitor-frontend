.block#text
  .content
    %h2.title Message Queues
    .inner
      %table.table
        %tr
          %th.first Name
          %th Size
          %th Message on top
          %th.last &nbsp;
        - @queues.each do |q|
          %tr{:class => cycle("odd", "even")}
            %td= q.name
            %td= q.size
            %td= q.peek
            %td.last
              = link_to "Send message", edit_admin_message_queue_path(q) 
