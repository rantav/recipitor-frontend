.group
  = image_tag @receipt.img_url
  = f.file_field :img
.group
  = f.label :img_file_name, t("activerecord.attributes.receipt.img_file_name", :default => "Img file name"), :class => :label
  = f.text_field :img_file_name, :class => 'text_field', :disabled => true 
.group
  = f.label :img_content_type, t("activerecord.attributes.receipt.img_content_type", :default => "Img content type"), :class => :label
  = f.text_field :img_content_type, :class => 'text_field', :disabled => true 
.group
  = f.label :img_file_size, t("activerecord.attributes.receipt.img_file_size", :default => "Img file size"), :class => :label
  = f.text_field :img_file_size, :class => 'text_field', :disabled => true 
.group
  = f.label :img_updated_at, t("activerecord.attributes.receipt.img_updated_at", :default => "Img updated at"), :class => :label
  = f.datetime_select :img_updated_at, :class => 'datetime_select'
.group
  = f.label :description, t("activerecord.attributes.receipt.description", :default => "Description"), :class => :label
  = f.text_field :description, :class => 'text_field'
  %span.description Ex: a simple text
.group
  = f.label :user_id, t("activerecord.attributes.receipt.user_id", :default => "User"), :class => :label
  = f.text_field :user_id, :class => 'text_field'
  %span.description Ex: user id, 5
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), receipts_path, :class => "text_button_padding link_button"
