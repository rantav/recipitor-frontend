.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", receipts_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Receipts
    .inner
      %table.table
        %tr
          %th.first ID
          %th Image
          %th User
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @receipts.each do |receipt|
          %tr{:class => cycle("odd", "even")}
            %td= receipt.id
            %td= link_to image_tag(receipt.img.url(:thumb)), receipt_path(receipt)
            %td
              -if receipt.user 
                =link_to receipt.user.email, receipt.user 
              -else
                No one
            %td= receipt.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", receipt_path(receipt)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_receipt_path(receipt)} |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", receipt_path(receipt), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
        = will_paginate @receipts
- content_for :sidebar, render(:partial => 'sidebar')
