.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", receipts_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_receipt_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Receipt
    .inner
      = form_for @receipt, :url => receipt_path(@receipt), :html => { :class => :form, :multipart => true } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
